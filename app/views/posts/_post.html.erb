<div id="<%= dom_id post %>">
  <p>
    <strong>Title:</strong>
    <%= post.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= post.content %>
  </p>

  <p>
    <strong>Files:</strong>
    <% post.files.each do |file| %>
      <div><%= link_to file.filename, file %></div>
    <% end %>
  </p>

</div>
